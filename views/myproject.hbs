    <div class="form-submit">
        <form action="/myproject" method="post">
            <div class="judul">ADD MY PROJECT</div>
            <div class="project-name">
                <label for="input-project-name">Project Name</label>
                <input class="form-control" id="input-project-name" name="inputProject" type="text">
            </div>
            <div class="startdate">
                <div class="satu">
                    <label for="input-start-date">Start Date</label>
                    <input class="form-control" id="input-start-date" name="inputStartDate" type="date">
                </div>
                <div class="dua">
                    <label for="input-end-date">End Date</label>
                    <input class="form-control" id="input-end-date" name="inputEndDate" type="date">
                </div>
            </div>
            <div class="description">
                <label for="input-description">Description</label>
                <textarea class="form-control" id="input-description" name="inputDescription"></textarea>
            </div>
            <div class="checkbox">
                <label>Technologies</label>
                <div class="input-technologies">
                    <div>
                        <input class="form-check-input" id="input-technologies-js" name="inputTechnologiesJs" type="checkbox" value="fa-js"/> Javascript
                        <input style="margin-left: 20px" class="form-check-input" id="input-technologies-php" name="inputTechnologiesPhp" type="checkbox" value="fa-php"/> Php
                    </div>
                    <div>
                        <input class="form-check-input" id="input-technologies-react" name="inputTechnologiesReact" type="checkbox" value="fa-react"/> React Js
                        <input style="margin-left: 32px" class="form-check-input" id="input-technologies-node-js" name="inputTechnologiesNodeJs" type="checkbox" value="fa-node-js"/> Node Js
                    </div>
                </div>
                
            </div>
            <div>
                <label for="input-image">Upload image</label>
            </div>
            <div class="inputan">
                <label for="input-image"> 
                <p style="
                    background-color:rgb(209, 209, 209);
                    border: 7px solid rgb(209, 209, 209);
                    color:rgb(146, 146, 146);
                    width: 100px;
                    height: 50px;
                    text-align: center;
                    font-size: 20px;
                    cursor: pointer;">Choose
                </p>
                </label>
                <input id="input-image" name="inputImage" type="file" hidden/>
            </div>
            <button type="submit" class="bg-color">Submit</button>
        </form>
